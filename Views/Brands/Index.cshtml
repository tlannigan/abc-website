@model IEnumerable<ca.abcmufflerandhitch.Models.Brand>

@{
    ViewData["Title"] = "Brands";
}

<div class="row justify-content-center align-content-between">
    <div class="col-sm-12 col-lg-8 d-flex flex-column justify-content-between">

        <h1>Brands</h1>

        <div class="row justify-content-between my-3">
            <div class="col-3">
                <a class="btn btn-success" asp-action="Create">Create New&nbsp;&nbsp;<i class="fas fa-plus"></i></a>
            </div>
            <div class="col-5">
                <input type="text" id="tableSearch" class="form-control" placeholder="Search..." autofocus />
            </div>
        </div>
        <table class="table table-dark table-striped table-hover text-nowrap" id="product-table">
            <thead>
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.BrandName)
                    </th>
                    <th>Manage</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.BrandName)
                        </td>
                        <td>
                            <a asp-action="Edit" asp-route-id="@item.BrandID">Edit</a> |
                            <a asp-action="Details" asp-route-id="@item.BrandID">Details</a> |
                            <a asp-action="Delete" asp-route-id="@item.BrandID">Delete</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>

        <script>
            let controlTarget = [];
            let truncTargets = [];
            let priorityTargets = [];
        </script>

    </div>
</div>
