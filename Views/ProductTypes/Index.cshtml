@model IEnumerable<ca.abcmufflerandhitch.Models.ProductType>

@{
    ViewData["Title"] = "Index";
}

<div class="row justify-content-center align-content-between">
    <div class="col d-flex flex-column justify-content-between">

        <h1>Product Types</h1>

        <div class="row justify-content-between my-3">
            <div class="col-3">
                <a class="btn btn-success" asp-action="Create">Create New&nbsp;&nbsp;<i class="fas fa-plus"></i></a>
            </div>
            <div class="col-5">
                <input type="text" id="tableSearch" class="form-control" placeholder="Search..." autofocus />
            </div>
        </div>
        <table class="table table-dark table-striped table-hover text-nowrap" id="product-table">
            <thead>
                <tr>
                    <th></th>
                    <th>
                        @Html.DisplayNameFor(m => m.ProductTypeName)
                    </th>
                    <th>
                        @Html.DisplayNameFor(m => m.Category)
                    </th>
                    <th>Manage</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td></td>
                        <td>
                            @Html.DisplayFor(modelItem => item.ProductTypeName)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Category)
                        </td>
                        <td>
                            <a asp-action="Edit" asp-route-id="@item.ProductTypeID">Edit</a> |
                            <a asp-action="Details" asp-route-id="@item.ProductTypeID">Details</a> |
                            <a asp-action="Delete" asp-route-id="@item.ProductTypeID">Delete</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>

        <script>
            let tableTruncTargets = []
            let tablePriorityTargets = [0, 1, 3]
        </script>

    </div>
</div>